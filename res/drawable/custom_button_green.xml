<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#57DA95"
                android:endColor="#57DA95"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:bottomRightRadius="25dip"
        		android:bottomLeftRadius="25dip"  
        		android:topRightRadius="25dip"
        		android:topLeftRadius="25dip" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:bottomRightRadius="25dip"
        		android:bottomLeftRadius="25dip"  
        		android:topRightRadius="25dip"
        		android:topLeftRadius="25dip" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>